<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="vmLogManager" class="com.bwsw.cloudstack.vm.logs.VmLogManagerImpl"/>

    <bean id="eventSubscriberFactory" class="com.bwsw.cloudstack.event.EventSubscriberFactoryImpl"/>

    <bean id="vmLogEventSubscriber" factory-bean="eventSubscriberFactory" factory-method="getVmLogEventSubscriber"/>

</beans>
